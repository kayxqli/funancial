<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ToolbarColor">




        <LinearLayout
            android:weightSum="4"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal">



            <LinearLayout
                android:id="@+id/toolbar_back_analytics"
                android:paddingLeft="20sp"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="?android:attr/actionBarSize"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="end|center_vertical"
                    android:textSize="15sp"
                    android:id="@+id/toolbar_back_detail"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/back_edit"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical|end"
                    android:textAllCaps="true" />

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20sp"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0sp"
                android:layout_height="?android:attr/actionBarSize"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/category_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase Detail"
                    android:textColor="@color/textColor"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:paddingRight="20sp"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="?android:attr/actionBarSize"
                android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <TableLayout
        android:paddingRight="15sp"
        android:id="@+id/nameLayout"
        android:paddingTop="20sp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        >

        <TableRow>
            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="30sp"
                android:background="@drawable/round_border_new_category"
                android:textColor="@color/colorPrimary"
                android:text="Amount"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textSize="18sp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="$ 10.00"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>



    <TableLayout
        android:paddingRight="15sp"
        android:paddingTop="10sp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="30sp"
                android:layout_weight="4"
                android:background="@drawable/round_border_new_category"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="05/02/2018"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:paddingRight="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:weightSum="9">

        <TableRow>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="30sp"
                android:layout_weight="4"
                android:background="@drawable/round_border_new_category"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="Category"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="Groceries"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:paddingRight="15sp"
        android:paddingTop="10sp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp">

        <TableRow>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="30sp"
                android:layout_weight="4"
                android:background="@drawable/round_border_new_category"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:text="Apples"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </TableRow>

        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scrollView1"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:scrollbarAlwaysDrawVerticalTrack="true">
            <LinearLayout
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
                <ImageView
                    android:src="@drawable/receipt"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content">

                </ImageView>
            </LinearLayout>
        </ScrollView>
    </TableLayout>


</LinearLayout>