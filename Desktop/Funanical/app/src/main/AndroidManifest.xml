<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="edu.umd.cs.funanical">

    <application
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".AddNewCategoryActivity"
            android:label="AddNewCategoryActivity" >
        </activity>

        <activity
            android:name=".CategoriesActivity"
            android:label="CategoriesActivity" >
        </activity>


        <activity
            android:name=".StoreActivity"
            android:label="StoreActivity" >
        </activity>


        <activity
            android:name=".AnalyticsActivity"
            android:label="AnalyticsActivity" >
        </activity>

        <activity
            android:name=".CategoryDetailActivity"
            android:label="CategoryDetailActivity" >
        </activity>

        <activity
            android:name=".PurchaseDetailActivity"
            android:label="PurchaseDetailActivity" >
        </activity>



    </application>

</manifest>
